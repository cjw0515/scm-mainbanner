                    <label for="pwd">적용위치:</label>
                    <select name="hobby" class="form-control">
                        <option value="전체">전체</option>
                    </select>
                </div>
                <div class="checkbox">
                    <label><input type="checkbox" name="remember"> 종료이전 </label>
                </div>
                <div class="pull-right">
                    <button type="submit" class="btn btn-success">조회</button>
                    <button type="button" class="btn btn-default">신규등록</button>
                </div>
                
            </form>
        </div>
    </div>

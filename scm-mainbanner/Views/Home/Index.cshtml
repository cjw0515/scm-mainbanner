                        <option value="관리자확정시">관리자확정시</option>
                        <option value="실시간">실시간</option>
                        <option value="일별">일별</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="pwd">그룹구분:</label>
                    <select name="hobby" class="form-control">
                        <option value="전체">선택</option>
                        <option value="사용함">index</option>
                        <option value="사용안함">기프트메인</option>
                        <option value="사용안함">PC배너</option>
